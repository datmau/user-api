{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--colors",
                "--no-cache",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}